# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 0
gaps outer 0

# Hide titlebar on windows:
default_border pixel 1

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:
smart_borders on

# Set wallpaper:
exec swaybg -i ~/.config/sway/sway.png

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

######################################
# color settings for bar and windows #
######################################

# # Define colors variables:
set $darkbluetrans	#08052be6
set $darkblue		#08314a
set $lightblue		#5294e2
set $urgentred		#e53935
set $urgentpurple	#A020F0
set $white		#ffffff
set $black		#000000
set $purple		#e345ff
set $darkgrey		#383c4a
set $grey		#b0b5bd
set $mediumgrey		#8b8b8b
set $yellowbrown	#e1b700

# define colors for windows:
#class		        		border		    bground		    text		indicator		child_border
client.focused		    	$lightblue	    $darkblue	    $white		$yellowbrown	$lightblue
client.unfocused	    	$darkblue	    $darkblue	    $grey		$darkgrey		$darkgrey
client.focused_inactive		$darkblue	    $darkblue	    $grey		$black			$black
client.urgent		    	$urgentred	    $urgentred	    $white		$yellowbrown	$yellowbrown
client.placeholder      	$black 		    $black 		    $white 		$black   		$black
client.background       	$white

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
# bar {
#     swaybar_command waybar
# }
############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
    # font pango: FiraCode Nerd Font Retina 10
    font pango: Noto Sans Regular 10
    status_command i3status-rs ~/.config/i3status-rust/config.toml
    position top
    # tray_output primary
    tray_padding 2
    icon_theme "Papirus-Dark"

    # When strip_workspace_numbers is set to yes,
    # any workspace that has a name of the form
    # “[n][:][NAME]” will display only the name.
    strip_workspace_numbers no
    # strip_workspace_name no

    colors {
        separator          $purple
        background         $darkgrey
        statusline         $white
#                               border 		        bg		        txt		    indicator
        # focused_workspace	    $mediumgrey	   	    $grey		    $darkgrey	$purple
        # active_workspace	    $lightblue      	$mediumgrey	    $darkgrey	$purple
        # inactive_workspace	$darkgrey   		$darkgrey	    $grey		$purple
        # urgent_workspace	    $urgentpurple	    $urgentpurple	$white		$purple
    }
}
